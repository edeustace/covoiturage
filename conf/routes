# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
#PAGES
GET     /evenement                            controllers.EventCtrl.evenement
GET     /evenement/creation                   controllers.EventCtrl.evenementCreation
#GET     /evenement/:id/abonnement             controllers.EventCtrl.evenementCreation

#API REST
#Events
GET     /rest/events/:id                   controllers.EventCtrl.getEvenement(id :String)
POST    /rest/events                       controllers.EventCtrl.createEvenement
PUT     /rest/events/:id                   controllers.EventCtrl.updateEvenement(id :String)
DELETE  /rest/events/:id                   controllers.EventCtrl.deleteEvenement(id :String)

#Subscribers
GET     /rest/events/:id/subscribers/:idSub       controllers.SubscriberCtrl.getSubscriber(id :String, idSub :String)
POST    /rest/events/:id/subscribers              controllers.SubscriberCtrl.createSubscriber(id :String)
PUT     /rest/events/:id/subscribers/:idSub       controllers.SubscriberCtrl.updateSubscriber(id :String, idSub :String)
DELETE  /rest/events/:id/subscribers/:idSub       controllers.SubscriberCtrl.deleteSubscriber(id :String, idSub :String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

